<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:weightSum="5"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/fond"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1">
        <TextView
            android:id="@+id/resultado"
            android:layout_width="235dp"
            android:layout_height="100dp"
            android:text=""
            android:textSelectHandleRight="@color/colorAccent"
            android:textSize="40sp"
            android:textStyle="bold"
            android:textColor="#000"
            android:paddingTop="25dp"
            android:layout_marginTop="80dp"
            android:layout_marginLeft="65dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="80dp"
            >
            <Button
                android:id="@+id/btnCE"
                android:layout_marginLeft="34dp"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:background="@drawable/btnp"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="CE"
                />
                />

            <Button
                android:id="@+id/btnMRC"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:background="@drawable/btna"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="MRC" />

            <Button
                android:id="@+id/btnMmen"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:background="@drawable/btna"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="M-"/>

            <Button
                android:id="@+id/btnMmas"
                android:layout_marginLeft="0dp"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:background="@drawable/btna"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="M+"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="39dp"
            android:paddingTop="4dp">
            <Button
                android:id="@+id/btnOn"
                android:layout_marginLeft="34dp"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:background="@drawable/btnr"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="ON"
                />
            <Button
                android:id="@+id/btnRaiz"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:background="@drawable/btnp"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="RAIZ"
                />
            <Button
                android:id="@+id/btn7porcentaje"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:background="@drawable/btnp"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="%"
                />
            <Button
                android:id="@+id/btndivision"
                android:layout_width="73dp"
                android:layout_height="35dp"
                android:background="@drawable/btnp"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="/"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:paddingBottom="2dp">
            <Button
                android:id="@+id/btn7"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="34dp"
                android:layout_width="73dp"
                android:layout_height="43dp"
                android:background="@drawable/btng"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="7"
                />
            <Button
                android:id="@+id/btn8"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_width="73dp"
                android:layout_height="43dp"
                android:background="@drawable/btng"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="8"
                />
            <Button
                android:id="@+id/btn9"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_width="73dp"
                android:layout_height="43dp"
                android:background="@drawable/btng"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="9"
                />
            <Button
                android:id="@+id/btnpor"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_width="73dp"
                android:layout_height="43dp"
                android:background="@drawable/btng"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="x"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            >

            <Button
                android:id="@+id/btn4"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="34dp"
                android:layout_width="73dp"
                android:layout_height="43dp"
                android:background="@drawable/btng"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="4"
                />
            <Button
                android:id="@+id/btn5"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_width="73dp"
                android:layout_height="43dp"
                android:background="@drawable/btng"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="5"
                />
            <Button
                android:id="@+id/btn6"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_width="73dp"
                android:layout_height="43dp"
                android:background="@drawable/btng"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="6"
                />
            <Button
                android:id="@+id/btnmenos"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="2dp"
                android:layout_width="73dp"
                android:layout_height="43dp"
                android:background="@drawable/btng"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="-"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="330dp"
            android:layout_height="100dp"
            android:weightSum="1"
            android:layout_weight="0.06">
            <LinearLayout
                android:layout_width="263dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="0.44">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:paddingTop="6dp"
                    android:weightSum="1">

                    <Button
                        android:id="@+id/btn1"
                        android:layout_width="73dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="34dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/btng"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:text="1" />

                    <Button
                        android:id="@+id/btn2"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="2dp"
                        android:layout_width="73dp"
                        android:layout_height="43dp"
                        android:background="@drawable/btng"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:text="2"
                        />

                    <Button
                        android:id="@+id/btn3"
                        android:layout_width="73dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/btng"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:text="3"
                        android:layout_weight="0.03" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_margin="9dp"
                    android:weightSum="1">
                    <Button
                        android:id="@+id/btn0"
                        android:layout_marginTop="2dp"
                        android:layout_marginLeft="25dp"
                        android:layout_width="73dp"
                        android:layout_height="43dp"
                        android:background="@drawable/btng"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:text="0"
                        />
                    <Button
                        android:id="@+id/btnpuntp"
                        android:layout_marginTop="0dp"
                        android:layout_marginLeft="2dp"
                        android:layout_width="73dp"
                        android:layout_height="43dp"
                        android:background="@drawable/btng"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:text="."
                        />
                    <Button
                        android:id="@+id/btnigual"
                        android:layout_width="74dp"
                        android:layout_height="43dp"
                        android:layout_marginLeft="2dp"
                        android:layout_marginTop="0dp"
                        android:background="@drawable/btng"
                        android:textColor="@color/colorAccent"
                        android:textSize="17dp"
                        android:textStyle="bold"
                        android:text="=" />
                </LinearLayout>

            </LinearLayout>
            <Button
                android:id="@+id/btnmas"
                android:layout_width="46dp"
                android:layout_height="78dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="11dp"
                android:background="@drawable/btns"
                android:textColor="@color/colorAccent"
                android:textSize="17dp"
                android:textStyle="bold"
                android:text="+" />


        </LinearLayout>











    </LinearLayout>


</RelativeLayout>





